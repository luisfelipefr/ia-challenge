FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app
COPY pom.xml ./
RUN --mount=type=cache,target=/root/.m2 mvn -DskipTests -B dependency:go-offline
COPY src ./src
# build + repackage (o parent jรก ativa o repackage no 'package')
RUN --mount=type=cache,target=/root/.m2 mvn -DskipTests -e -B clean package

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]


# Use the following command to build the Docker image:
# docker build -t ia-challenger-backend.